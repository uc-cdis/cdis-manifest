{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowListLocation",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::584476192960:user/fence_bot",
          "arn:aws:iam::236835632492:user/data-refresh"
        ]
      },
      "Action": [
        "s3:GetBucketLocation",
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::gdc-hcmi-cmdc-phs001486-2-open"
    },
    {
      "Sid": "AllowGetObject",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::584476192960:user/fence_bot"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::gdc-hcmi-cmdc-phs001486-2-open/*"
    },
    {
      "Sid": "AllowPublicRead",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:Get*",
        "s3:List*"
      ],
      "Resource": [
        "arn:aws:s3:::gdc-hcmi-cmdc-phs001486-2-open",
        "arn:aws:s3:::gdc-hcmi-cmdc-phs001486-2-open/*"
      ]
    }
  ]
}
