{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDataRefresh",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::236835632492:user/data-refresh"
      },
      "Action": [
        "s3:Get*",
        "s3:List*"
      ],
      "Resource": [
        "arn:aws:s3:::gdc-varepop-apollo-phs001374-2-open",
        "arn:aws:s3:::gdc-varepop-apollo-phs001374-2-open/*"
      ]
    },
    {
      "Sid": "AllowListLocation",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::584476192960:user/fence_bot",
          "arn:aws:iam::236835632492:user/data-refresh"
        ]
      },
      "Action": [
        "s3:GetBucketLocation",
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::gdc-varepop-apollo-phs001374-2-open"
    },
    {
      "Sid": "AllowGetObject",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::584476192960:user/fence_bot"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::gdc-varepop-apollo-phs001374-2-open/*"
    },
    {
      "Sid": "data-refresh only with bucket owner full control",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::236835632492:user/data-refresh"
        ]
      },
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::gdc-varepop-apollo-phs001374-2-open/*",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-acl": "bucket-owner-full-control"
        }
      }
    }
  ]
}
